{% extends 'base.html.twig' %}

{% block body %}
    <div class="toolbar">
        <button id="new-event"><i class="fa-solid fa-plus"></i>Nuevo evento</button>
    </div>
    <div class="event-cards">
        {% for event in events %}
            <div class="event-card">
                <h3 class="event-title">{{ event.name }}</h3>
                <ul>
                    <li class="event-desciption">{{ event.description }}</li>
                    <li class="event-location">Ubicaci√≥n: {{ event.location }}</li>
                    <li class="event-start">Inicio: {{ event.humanStart }}</li>
                    <li class="event-end">Fin: {{ event.humanEnd }}</li>
                </ul>
                <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-primary">
                    <button><i class="fa-solid fa-user"></i>Ver Guardias</button>
                </a>
            </div>
        {% else %}
            <p>No existen eventos actualmente, prueba a crear uno</p>
        {% endfor %}
   {% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/libs/FormBuilder.js') }}"></script>
    <script src="{{ asset('js/events.js') }}"></script>
{% endblock %}