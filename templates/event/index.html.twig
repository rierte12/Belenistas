{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}

    {% for event in events %}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ event.name }}</h5>
                <p class="card-text">{{ event.description }}</p>
                <a href="{{ path('app_event_show', {'id': event.identifier}) }}" class="btn btn-primary"></a>
            </div>
        </div>
    {% else %}
        <p>No existen eventos actualmente, prueba a crear uno</p>
    {% endfor %}

{% endblock %}
