{% extends 'base.html.twig' %}
{% block body %}
    <div class="event-details">
        <ul>
            <li>Evento: {{ event.name }}</li>
            {% if event.description is defined %}
                <li>Descripci√≥n: {{ event.description }}</li>
            {% endif %}
            <li>Ubicacion: {{ event.location }}</li>
            <li>Inicio: {{ event.humanStart }}</li>
            <li>Fin: {{ event.humanEnd }}</li>
        </ul>
    </div>

    <div id="calendar">
        <div class="loading"><i class="fa-solid fa-gear fa-spin"></i>Cargando guardias...</div>
    </div>
{% endblock %}

{% block javascripts %}
